load csv
    from all filenames matching ~<matching.*csv$>
         in directory 'data'
         having fields (id, field)

    into postgres://yugabyte:yugabyte@localhost:5433/pgloader
  target table matching

    with fields optionally enclosed by '"', 
         fields terminated by ',',
         truncate,
         disable triggers,
         drop indexes,
         max parallel create index=1
         -- workers = 8,
         -- concurrency = 1,

  before load do
    $$ drop table if exists matching; $$,
    $$ create table matching(id int, field text); $$;
